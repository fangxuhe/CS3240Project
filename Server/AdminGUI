import Tkinter
import Pmw


class Widget:
    def __init__(self, parent):

        fixedFont = Pmw.logicalfont('Fixed')
        self.st = Pmw.ScrolledText(parent,
                                   labelpos = 'n',
                                   label_text='System Log',

                                   usehullsize = 1,
                                   hull_width = 400,
                                   hull_height = 300,
                                   text_wrap='none',
                                   text_font = fixedFont,

                                   text_padx = 4,
                                   text_pady = 4,
                                   )

        self.st.importfile('log.txt');
        self.st.pack(padx = 5, pady = 5, fill = 'both', expand = 1)

        self.buttonbox = Pmw.ButtonBox(parent,
                                       labelpos='nw',
                                       label_text='Admin Commands:')


        self.buttonbox.pack(fill='both', padx=8, pady=8)


        self.buttonbox.add('System Information', command=self.getSystemInfo)
        self.buttonbox.add('User Information')

    def getSystemInfo(self):



    def update(self):

        self.st.importfile('log.txt')
        root.after(1000, self.update)

    def clear(self):

        self.st.clear()
        root.after(999, self.clear)

if __name__ == '__main__':
    root = Tkinter.Tk()
    Pmw.initialise(root)
    root.title('Admin Gui')
    widget = Widget(root)
    root.after(1000,widget.clear)
    root.after(1000,widget.update)
    root.mainloop()
